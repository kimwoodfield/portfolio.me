---
import { Page } from '../components/Page';
import SiteHeader from '../components/SiteHeader.astro';
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
	</head>
	<body>
		<main>
			<SiteHeader />
			<Page>
				<slot />
			</Page>
		</main>
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html, body {
		font-family: 'Inter', sans-serif;
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	#liked-songs-button {
		padding: 8px 16px;
		margin: 1px;
		font-size: 18px;
		border: 0.05px solid #e7e7e7;
	}
	.liked-songs-first-line {
		background-color: #00000033;
		min-width: 10%;
		height: 1px;
	}
	.liked-songs-second-line {
		background-color: #00000033;
		width: 90%;
		height: 1px;
	}
	html.dark {
		background-color: rgb(15, 17, 23);
		color: #94a3b8;
	}

	.dark h1, .dark h2 {
		color: #fff;
	}

	.dark .nav-links a {
		color: #fff;
	}

	.dark #liked-songs-button {
		background-color: #00000033;
		color: #fff;
		border: 1.5px solid #181c24;
	}
	.dark .liked-songs-first-line {
		background-color: #e2e9ec;
		opacity: 0.25;
	}
	.dark .liked-songs-second-line {
		background-color: #e2e9ec;
		opacity: 0.25;
	}
</style>
