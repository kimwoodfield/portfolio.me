export async function getStaticPaths() {
  const posts = await Astro.glob('../../content/blog/*.mdx');

  return posts.map(post => {
    return ({
      params: {
        slug: post.frontmatter.slug
      },
      props: {
        post
      },
    })
  });

}

const { Content } = Astro.props.post
---
<article>
  <Content/>
</article>